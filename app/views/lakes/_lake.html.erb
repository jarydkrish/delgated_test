<div id="<%= dom_id lake %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Lake:</strong>
    <%= lake.lake_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this lake", lake, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this lake", edit_lake_path(lake), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
